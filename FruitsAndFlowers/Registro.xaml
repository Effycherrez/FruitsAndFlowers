<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FruitsAndFlowers.Registro">
    
        <ContentPage.Content>
        <Grid>

            <Image Source="wallpaper.jpg" Aspect="AspectFill"/>
            <BoxView Color="Black" Opacity="0.8"/>

            <StackLayout>
                <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
                    <Image Source="https://sbsconsulting.com.ec/wp-content/uploads/2018/01/LOGO-UISRAEL-768x209.png"/>
                </Frame>
                <Image x:Name="imgPerfil" Source="ProfilePicture.png"></Image>
                <Label></Label>

                <Label x:Name="lblId" FontSize="Large" Text="Id : " />
                <Label></Label>

                <Label x:Name="lblNombre" FontSize="Large" Text="Nombre: "/>
                <Label></Label>

                <Label x:Name="lblApellido" FontSize="Large" Text="Apellido:" />
                <Label></Label>

                <Label x:Name="lblEmail" FontSize="Large" Text="email: "/>
                <Label></Label>

                <Button x:Name="btnSalir" Text="Salir" Clicked="btnSalir_Clicked" />
            </StackLayout>
        </Grid>
    </ContentPage.Content>
       
</ContentPage>