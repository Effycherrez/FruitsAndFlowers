<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FruitsAndFlowers.Master"
             Title="Master">
    <ContentPage.Content>
        <Grid>
            <Image Source="wallpaper.jpg" Aspect="AspectFill"/>
            <BoxView Color="Black" Opacity="0.8"/>
            

            <StackLayout>
            <Button Text="Perfil " x:Name="btnPerfil" BackgroundColor="White" Clicked="btnPerfil_Clicked"/>
            <Button Text="Productos" x:Name="bntProductos" BackgroundColor="White" Clicked="bntProductos_Clicked"/>
        </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>